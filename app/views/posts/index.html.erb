<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>投稿一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header text-right">
          <%= link_to '新規作成', new_post_path, { class: "btn btn-primary" } %>
        </div>
        <div class="card-body">

          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>User</th>
                <th>Post date</th>
                <th>Content</th>
                <th>Like count</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= link_to post.id, post %></td>
                  <td><%= post.user_id %></td>
                  <td><%= post.post_date.strftime('%Y/%m/%d') %></td>
                  <td><%= post.content %></td>
                  <td><%= post.like_count %></td>
                  <td><%= link_to 'Show', post %></td>
                  <td><%= link_to 'Edit', edit_post_path(post) %></td>
                  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= link_to '新規作成', new_post_path, { class: "btn btn-primary" } %>
        </div>
      </div>
    </div>
  </div>
</div>
